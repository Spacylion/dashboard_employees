// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// опишем модели которые будут исопльзоваться в проекте
//  то есть описание объектов которые ьулут в БД

model User {
  id              String     @id @default(uuid())
  email           String
  password        String
  name            String
  createdEmployee Employee[]
}

// создание отношения между объектами
//  то есть каждый кто зарегенится , будет возможность создать пользователя
model Employee {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  age       String
  address   String
  user      User   @relation(fields: [userId], references: [id])
  userId    String
}
